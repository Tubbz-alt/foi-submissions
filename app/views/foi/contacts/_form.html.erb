<% content_for :page_title, 'How can we reply to you?' %>
<% content_for :body_classes, 'foi foi-contact-details' %>

<h1 class="heading-xlarge">
  How can we reply to you?
</h1>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= form_for @contact, url: foi_request_contact_path do |f| %>
      <%= f.text_field :full_name, class: 'form-control form-control-3-4 js-session-store', required: true %>
      <%= f.email_field :email, class: 'form-control form-control-3-4 js-session-store js-check-email', required: true %>

      <aside class="form-aside">
        <p class="font-xsmall text">
          Weâ€™ll only use these details for the handling of your request.
          <a href="https://www.hackney.gov.uk/privacy">Read&nbsp;more in our privacy statement.</a>
        </p>
      </aside>

      <p class="cta-section">
        <%= f.submit 'Check your request', class: 'button' %>
      </p>
    <% end %>
  </div>
</div>
